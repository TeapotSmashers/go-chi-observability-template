{
  "id": null,
  "uid": "calculator-observability",
  "title": "Calculator Observability",
  "tags": ["calculator", "traces", "observability"],
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "trace_id",
        "type": "textbox",
        "current": {
          "value": "",
          "text": ""
        },
        "label": "Trace ID"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Trace Viewer",
      "type": "traces",
      "datasource": {
        "type": "tempo",
        "uid": "tempo"
      },
      "gridPos": {
        "h": 16,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "tempo",
            "uid": "tempo"
          },
          "queryType": "traceql",
          "query": ".name=\"calculator.chain\""
        }
      ]
    },
    {
      "id": 2,
      "title": "Operations Counter",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(otel_calculator_operations_total)",
          "legendFormat": "Total Operations"
        }
      ]
    },
    {
      "id": 3,
      "title": "Recent Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "{service_name=\"go-chi-api\"} |= \"chain\""
        }
      ]
    }
  ]
}
