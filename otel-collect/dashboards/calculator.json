{
  "id": null,
  "uid": "calculator-observability",
  "title": "Calculator Observability",
  "tags": ["calculator", "traces", "observability"],
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "title": "Operations by Type",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum by (operation) (otel_calculator_operations_total)",
          "legendFormat": "{{operation}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Operations Counter",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum(otel_calculator_operations_total)",
          "legendFormat": "Total Operations"
        }
      ]
    },
    {
      "id": 3,
      "title": "Recent Logs",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "{service_name=\"go-chi-api\"} |= \"chain\""
        }
      ]
    },
    {
      "id": 4,
      "title": "Total Errors",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "sum(otel_calculator_errors_total)",
          "legendFormat": "Total Errors"
        }
      ]
    },
    {
      "id": 5,
      "title": "Errors by Operation",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 20
      },
      "targets": [
        {
          "expr": "sum by (operation) (otel_calculator_errors_total)",
          "legendFormat": "{{operation}}"
        }
      ]
    }
  ]
}
